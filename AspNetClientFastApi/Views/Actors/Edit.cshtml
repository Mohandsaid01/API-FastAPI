@model AspNetClientFastApi.Models.Actor

@{
    ViewData["Title"] = "Modifier un acteur";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Modifier l’acteur ✏️</h2>

    <!-- Formulaire d'édition d'acteur -->
    <form asp-action="Edit" asp-controller="Actors" method="post" class="mx-auto" style="max-width: 600px;">
        @* Champ caché pour s'assurer que l'ID est bien envoyé au POST *@
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nom</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Bio" class="form-label">Biographie</label>
            <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Picture" class="form-label">Image URL</label>
            <input asp-for="Picture" class="form-control" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-warning px-4 me-2">Enregistrer</button>
            <a asp-action="Index" asp-controller="Actors" class="btn btn-outline-secondary">Annuler</a>
        </div>
    </form>
</div>

@section Scripts {
    @* Active la validation côté client (nécessite jQuery Unobtrusive) *@
    <partial name="_ValidationScriptsPartial" />
}
