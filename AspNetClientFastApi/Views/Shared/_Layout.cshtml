<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Encodage UTF-8 et affichage responsive -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Titre dynamique basé sur ViewData["Title"] -->
    <title>@ViewData["Title"] - AspNetClientFastApi</title>

    <!-- Bootstrap via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Style inspiré du design Apple -->
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
        }
        .card {
            border-radius: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            transition: 0.3s;
        }
        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(0,0,0,0.1);
        }
        .btn {
            border-radius: 2rem !important;
            font-weight: 500;
        }
    </style>

    <!-- CSS local généré par Razor (site.css + .styles.css) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspNetClientFastApi.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Barre de navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Lien vers la liste des acteurs -->
                <a class="navbar-brand fw-bold text-warning" asp-controller="Actors" asp-action="Index">Acteurs</a>

                <!-- Bouton mobile responsive -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Liens de navigation -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Actors" asp-action="Index">Acteurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Confidentialité</a>
                        </li>
                    </ul>

                    <!-- Formulaire de recherche par ID (GET) -->
                    <form class="d-flex ms-3" asp-controller="Actors" asp-action="Details" method="get">
                        <input class="form-control me-2 rounded-pill" type="number" min="1" name="id" placeholder="ID de l'acteur" required />
                        <button class="btn btn-outline-primary rounded-pill" type="submit">Rechercher</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <!-- Zone de contenu de la vue -->
    <main class="container pb-4">
        @RenderBody()
    </main>

    <!-- Pied de page -->
    <footer class="border-top footer text-muted mt-auto">
        <div class="container text-center py-3">
            &copy; 2025 - AspNetClientFastApi - <a asp-controller="Home" asp-action="Privacy">Confidentialité</a>
        </div>
    </footer>

    <!-- Scripts nécessaires au bon fonctionnement de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Permet aux vues de déclarer leurs propres scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
